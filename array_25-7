// Muntiple matrix.
#include <iostream.h>
#include <conio.h>
class matrix
{
  private:
    int a[10][10],r,c;
  public:
    void input();
    void display();
    int mul(matrix,matrix);
};
void matrix::input()
{
    int i,j;
    cout<<"Enter the number of rows and columns of matrix :";
    cin>>r>>c;
    cout<<"Enter the elements of matrix:\n";
    for(i=0; i<r; i++)
    {
        for(j=0; j<c; j++)
        {
            cin>>a[i][j];
        }
    }
}
void matrix::display()
{
    int i,j;
    for(i=0; i<r; i++)
    {
        for(j=0; j<c; j++)
        {
            cout<<a[i][j]<<"\t";
        }
        
        cout<<endl;
    }
}
int matrix::mul(matrix x,matrix y)
{
    int i,j,k;
    if(x.c!=y.r)
        return 0;
    else
    {
        for(i=0; i<x.r; i++)
        {
            for(j=0; j<y.c; j++)
            {
                int s=0;
                for(k=0; k<x.c; k++)
                {
                    s=s+x.a[i][k]*y.a[k][j];
                }
                a[i][j]=s;
            }
        }
        r=x.r;
        c=y.c;
        return 1;
    }
}
int main()
{
    matrix m1,m2,m3;
    m1.input();
    m2.input();
    int f= m3.mul(m1,m2);
    if(f==0)
        cout<<"Cannot multiply the matrices.";
    else
    {
    
        cout<<"The product is: ";
        m3.display();
    }
    return 0;
}
