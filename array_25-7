
#include <iostream>
class matrix{
    public:
    int a[10][10],n1,n2,i,j;
    void input();
  void display();
    int add(matrix,matrix);
};

void input() {

    // Write C++ code here
    std::cout << "ENTER NUMBER OF ROWS AND COLUMNS";
    std::cin>>>n1>n2;
    std:: cout<<"ENTER THE ROWS AND COL's: "
    for(i=0;i<n1;i++)
    {
        for (j=0;j< n2;j++)
        {
           std::cin>>a[i][j];
        }
    }
}
    
   
void matrix::display()
{
for(i=0;i< n1;i++)
     {
         for (j=0;j<n2;j++)
         {
             std:: cout<<a[i][j];
         }
       std:: cout<<endl;
     }

    
}
int matrix:: add(matrix x, matrix y)
{
    if (x.r!=y.r || x.c!y.c)
    std::cout<<"NOT POSSIBLE :"
    return 0;
    for (i=0;i<x.r;i++)
    {
        for (=0;j<x.c;j++)
            a[i][j]=x.a[i][j]+y.a[i][j];
        r=x.r;
        c=x.c;
            return 1;
    }
    
}
int main(){
     matrix m1,m2,m3;
     m1.input();
     m2.input();
     m3.add(m1,m2);
     int f=m3.add(m1,m2);
     if(f==1)
     {
     cout<<"THE SUM IS: \n"
     m3.display();
     }
     else
     cout<<"NOT POSSIBLE"
     
  
     return 0;
}
