def process(a):
    s=0
    i=1
    while i<=0:
        if a%2==0 :
            s=s+i 
        i=i+1
    return (s)
n=int(input("Enter the number: "))
r=process(n)
if r==n:
    print("It is a perfect number")
elif r>n:
      print("It is abundent number")
else:
      print("It is deficient number")
      
